<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
        <Text
            ohos:id="$+id:l_lunarYear"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="5vp"
            ohos:text="年"
            ohos:text_alignment="center"
            ohos:text_size="12vp"
            ohos:text_color="#000"/>
        <Text
            ohos:id="$+id:l_lunar"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="5vp"
            ohos:text="农历"
            ohos:text_alignment="center"
            ohos:text_size="26vp"
            ohos:text_color="#000"
            />
        <Text
            ohos:id="$+id:l_weekday"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:padding="5vp"
            ohos:text_alignment="center"
            ohos:text="星期"
            ohos:multiple_lines="true"
            ohos:text_size="12vp"
            ohos:text_color="#000"/>
        <Text
            ohos:id="$+id:l_date"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_alignment="center"
            ohos:text="日期"
            ohos:text_size="12vp"
            ohos:text_color="#55000000"/>

        <Text
            ohos:id="$+id:l_suit"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_padding="50vp"
            ohos:right_padding="50vp"
            ohos:top_padding="15vp"
            ohos:text_alignment="center"
            ohos:text="宜"
            ohos:multiple_lines="true"
            ohos:text_size="12vp"
            ohos:text_color="#FFFF0000"/>

        <Text
            ohos:id="$+id:l_avoid"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_padding="50vp"
            ohos:right_padding="50vp"
            ohos:top_padding="15vp"
            ohos:text_alignment="center"
            ohos:text="忌"
            ohos:multiple_lines="true"
            ohos:text_size="12vp"
            ohos:text_color="#FF00FF4C"/>
</DirectionalLayout>